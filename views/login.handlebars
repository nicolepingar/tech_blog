<div class="login-card position-absolute top-0 start-50 translate-middle">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
        <div class="row mb-3">
            <label for="username-login" class="col-sm-2 col-form-label">Username:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="username-login" />
            </div>
        </div>
        <div class="row mb-3">
            <label for="password-login" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" id="password-login" />
            </div>
        </div>
        <div>
            <button class="btn btn-primary signup-form" type="submit">Login</button>
        </div>

        <a href="/signup">Sign-up Instead</a>
    </form>
</div>

<script src="./js/login.js"></script>