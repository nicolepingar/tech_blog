<div class="login-card position-absolute top-0 start-50 translate-middle">
    <h2 class="page-title">Signup</h2>
    <form class="form login-form">
        <div class="row mb-3">
            <label for="username-signup" class="col-sm-2 col-form-label">Username:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="username-signup" />
            </div>
        </div>
        <div class="row mb-3">
            <label for="password-signup" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" id="password-signup" />
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary signup-form" type="submit">Sign-up</button>
        </div>

        <a href="/login">Login Instead</a>
    </form>
</div>

<script src="./js/signup.js"></script>